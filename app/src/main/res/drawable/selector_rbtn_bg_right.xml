<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="true">
        <shape android:shape="rectangle" android:padding="10dp">
            <solid android:color="@color/theme" />
            <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>

    <item android:state_checked="false" android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dip" android:color="@color/theme" />
            <solid android:color="@color/white" />
            <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
        </shape>

    </item>
</selector>