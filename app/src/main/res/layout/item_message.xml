<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一季度总结大会"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会议时间:"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/gray_light"
        android:layout_below="@+id/tv_message_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015/12/12&#160;&#160;&#160;&#160;9:00am"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/gray_light"
        android:layout_below="@+id/tv_message_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会议地点:"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/gray_light"
        android:layout_below="@+id/tv_message_time"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/tv_message_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A3-307"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/gray_light"
        android:layout_below="@+id/tv_message_time"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="90dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="负责人:"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/gray_light"
        android:layout_below="@+id/tv_message_place"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/tv_message_responsible_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="吴彦祖"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/gray_light"
        android:layout_below="@+id/tv_message_place"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="90dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_arrow_right"
        android:layout_marginRight="15dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_before_the_meeting"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="12dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>